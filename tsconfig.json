{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "target": "es2019",
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
